

<!-- app/views/students/_student.html.erb -->
<div >
  <table class="table">
  <thead>
     <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email </th>
    
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
    <tr>
       <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
       <td>
      <%= link_to "Show this student", student %>
    </td>
    </tr>
     <% end %>
  </tbody>
  </table>
</div>

